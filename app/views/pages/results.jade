doctype
html
  head
    meta(charset="utf-8")
    title= title
    link(href="/stylesheet/headbar.css" rel="stylesheet")
    link(href="/stylesheet/sign.css" rel="stylesheet")
  body
    include ../includes/headbar
    .container(style='font-family:"Microsoft YaHei"')
      .row
        .panel.panel-default
          .panel-heading
            h3 #{keyword}
          .panel-body
            if movies && movies.length>0        
              each item in movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      if item.poster.indexOf('http')>-1
                          img(src="#{item.poster}",alt="#{item.title}")
                        else
                          img(src="/upload/#{item.poster}",alt="#{item.title}")  
                    .caption
                      h3 #{item.title}
                      p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片   
        ul.pagination
          - for(var i=0;i<totalPage;i++){
            - if(currentPage==(i+1)){
                li.active
                  span #{currentPage}
              - }else{
                  li
                    a(href="/results?#{query}&p=#{i}") #{i+1}
                    a(href="#")
              - }
            - }
      .block(style="width:100%;height:50px")
    script(src="/libs/jquery/dist/jquery.min.js")
    script(src="js/headbar.js")